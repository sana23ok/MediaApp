<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Кнопка для вибору аудіо файлу -->
    <Button
        android:id="@+id/btnChooseAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Audio File" />

    <!-- Іконка для аудіо (відображатиметься після вибору файлу) -->
    <ImageView
        android:id="@+id/audioIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_audio"
        android:visibility="gone"
        android:layout_marginTop="16dp"/>

    <!-- Кнопка для відтворення аудіо -->
    <Button
        android:id="@+id/btnPlayAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Audio"
        android:enabled="false"
        android:layout_marginTop="16dp"/>

    <!-- Кнопка для паузи -->
    <Button
        android:id="@+id/btnPauseAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause Audio"
        android:enabled="false"
        android:layout_marginTop="16dp"/>

    <!-- Кнопка для зупинки -->
    <Button
        android:id="@+id/btnStopAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Audio"
        android:enabled="false"
        android:layout_marginTop="16dp"/>

    <!-- Кнопка для переходу до відео -->
    <Button
        android:id="@+id/btnSwitchToVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch to Video"
        android:layout_marginTop="16dp" />
</LinearLayout>
